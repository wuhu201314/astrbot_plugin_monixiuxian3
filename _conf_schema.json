      },
      "WUXING_ROOT_SPEED": {
        "description": "五行单灵根",
        "type": "float",
        "default": 1.0,
        "hint": "金、木、水、火、土单一灵根，修炼速度正常。"
      },
      "THUNDER_ROOT_SPEED": {
        "description": "雷灵根",
        "type": "float",
        "default": 1.3,
        "hint": "天地雷霆之力，变异灵根，稀有。"
      },
      "ICE_ROOT_SPEED": {
        "description": "冰灵根",
        "type": "float",
        "default": 1.25,
        "hint": "极寒冰封之力，变异灵根，稀有。"
      },
      "WIND_ROOT_SPEED": {
        "description": "风灵根",
        "type": "float",
        "default": 1.25,
        "hint": "疾风迅雷之力，变异灵根，稀有。"
      },
      "DARK_ROOT_SPEED": {
        "description": "暗灵根",
        "type": "float",
        "default": 1.3,
        "hint": "幽暗深邃之力，变异灵根，稀有。"
      },
      "LIGHT_ROOT_SPEED": {
        "description": "光灵根",
        "type": "float",
        "default": 1.3,
        "hint": "神圣光明之力，变异灵根，稀有。"
      },
      "HEAVENLY_ROOT_SPEED": {
        "description": "天灵根",
        "type": "float",
        "default": 1.5,
        "hint": "天选之子，单一属性的极致，极其稀有。"
      },
      "YIN_YANG_ROOT_SPEED": {
        "description": "阴阳灵根",
        "type": "float",
        "default": 1.8,
        "hint": "阴阳调和，造化玄机，传说级灵根。"
      },
      "FUSION_ROOT_SPEED": {
        "description": "融合灵根",
        "type": "float",
        "default": 1.8,
        "hint": "五行融合，万法归一，传说级灵根。"
      },
      "CHAOS_ROOT_SPEED": {
        "description": "混沌灵根",
        "type": "float",
        "default": 2.0,
        "hint": "混沌初开，包罗万象，神话级灵根。"
      },
      "INNATE_BODY_SPEED": {
        "description": "先天道体",
        "type": "float",
        "default": 2.5,
        "hint": "天生道体，与天地同寿，禁忌级体质。"
      },
      "DIVINE_BODY_SPEED": {
        "description": "神圣体质",
        "type": "float",
        "default": 2.3,
        "hint": "神之后裔，天赋异禀，禁忌级体质。"
      }
    }
  },
