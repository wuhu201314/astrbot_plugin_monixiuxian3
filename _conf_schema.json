{
  "ACCESS_CONTROL": {
    "description": "访问控制",
    "type": "object",
    "items": {
      "WHITELIST_GROUPS": {
        "description": "白名单群号列表",
        "type": "list",
        "default": [],
        "hint": "请添加允许使用此插件的QQ群号。留空则表示所有群聊都可用。"
      },
      "SHOP_MANAGERS": {
        "description": "商店管理员名单",
        "type": "list",
        "default": [],
        "hint": "可以手动刷新商店的用户ID（字符串）。为空则不允许任何人手动刷新商店。"
      }
    }
  },
  "VALUES": {
    "description": "核心数值配置",
    "type": "object",
    "items": {
      "INITIAL_GOLD": {
        "description": "初始灵石",
        "type": "int",
        "default": 100,
        "hint": "新玩家创建角色时获得的初始灵石数量。"
      },
      "BASE_EXP_PER_MINUTE": {
        "description": "闭关基础修为（每分钟）",
        "type": "int",
        "default": 100,
        "hint": "闭关修炼时，每分钟获得的基础修为值（会受灵根倍率影响）。"
      },
      "CHECK_IN_GOLD_MIN": {
        "description": "签到灵石奖励（最小值）",
        "type": "int",
        "default": 50,
        "hint": "每日签到获得的最少灵石数量。"
      },
      "CHECK_IN_GOLD_MAX": {
        "description": "签到灵石奖励（最大值）",
        "type": "int",
        "default": 500,
        "hint": "每日签到获得的最多灵石数量。"
      },
      "BREAKTHROUGH_DEATH_PROBABILITY": {
        "description": "突破失败死亡概率范围",
        "type": "list",
        "default": [0.01, 0.1],
        "hint": "突破失败时的死亡概率范围。第一个值为最小概率（1%），第二个值为最大概率（10%）。每次突破失败会在此范围内随机一个死亡概率。"
      },
      "SHOP_REFRESH_HOURS": {
        "description": "商店刷新时间（小时）",
        "type": "int",
        "default": 6,
        "hint": "商店自动刷新的间隔时间（小时）。设置为0则不自动刷新。"
      },
      "SHOP_ITEM_COUNT": {
        "description": "商店展示物品数量",
        "type": "int",
        "default": 10,
        "hint": "商店每次刷新展示的物品数量。"
      },
      "SHOP_DISCOUNT_MIN": {
        "description": "商店折扣最小值",
        "type": "float",
        "default": 0.8,
        "hint": "商店物品折扣的最小值（0.8表示8折，即80%的价格）。"
      },
      "SHOP_DISCOUNT_MAX": {
        "description": "商店折扣最大值",
        "type": "float",
        "default": 1.2,
        "hint": "商店物品折扣的最大值（1.2表示1.2倍价格）。设置为1.0则不打折。"
      },
      "SHOP_STOCK_DIVISOR": {
        "description": "商店库存计算基数",
        "type": "int",
        "default": 100,
        "hint": "库存=物品权重/基数。基数越大，库存越少。例如：权重1000的物品，基数100时库存为10；权重5的物品，库存为1（最少为1）。"
      }
    }
  },
  "SPIRIT_ROOT_SPEEDS": {
    "description": "灵根修炼速度倍率",
    "type": "object",
    "items": {
      "PSEUDO_ROOT_SPEED": {
